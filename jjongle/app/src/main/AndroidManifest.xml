<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 필요한 권한들 -->
    <uses-permission
        android:name="android.permission.CAMERA"
        tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".JjongleApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:networkSecurityConfig="@xml/network_security_config"

        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jjongle"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- ✅ 메인 런처 (이것만 남김) -->
        <activity
            android:name=".presentation.ui.activity.MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Jjongle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 앱 내부에서 쓰는 화면이면 유지 -->
        <activity
            android:name=".presentation.ui.activity.UnityGameActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="false"
            android:theme="@style/Theme.Jjongle" />

        <!-- 🎯 Unity를 띄울 커스텀 액티비티 (네가 만든 것) -->
        <activity
            android:name="com.ssafy.jjongle.CustomUnityActivity"
            android:exported="true"
            android:process=":Unity"
            android:theme="@style/Theme.Jjongle"
            android:hardwareAccelerated="false"
            android:screenOrientation="fullSensor"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density" />

        <!-- ⛏️ 라이브러리 쪽에 남아 있을 수 있는 런처/액티비티들 비활성화 -->
        <activity
            android:name="com.unity3d.player.UnityPlayerActivity"
            tools:replace="android:exported"
            android:exported="false">
            <intent-filter tools:node="removeAll" />
        </activity>

        <activity
            android:name="com.unity3d.player.UnityPlayerGameActivity"
            tools:replace="android:exported"
            android:exported="false">
            <intent-filter tools:node="removeAll" />
        </activity>

        <activity
            android:name="com.unity.mynativeapp.MainUnityActivity"
            tools:replace="android:exported"
            android:exported="false">
            <intent-filter tools:node="removeAll" />
        </activity>

        <activity
            android:name="com.unity3d.player.MainUnityActivity"
            tools:replace="android:exported"
            android:exported="false">
            <intent-filter tools:node="removeAll" />
        </activity>

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>